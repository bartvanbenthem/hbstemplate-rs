apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{policy_name}}
  labels:
    app: {{policy_name}}
    pool: {{pool_name}}
spec:
  egress:
  - ports:
    - port: 443
      protocol: TCP
    - port: 443
      protocol: UDP
    to:
    {{#each targets}}  
    - ipBlock:
        cidr: {{this}}
    {{/each}}
  podSelector:
    matchLabels:
      app: {{policy_name}}
      pool: {{pool_name}}
  policyTypes:
  - Ingress
  - Egress